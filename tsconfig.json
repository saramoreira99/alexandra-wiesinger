{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",       // → Hier wird das kompilierte JS ausgegeben
    "rootDir": "./",         // → Quellcodebasis
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["node_modules", ".nuxt", "dist"]
}